<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <!-- 앱 로고 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="앱 로고"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 슬로건 -->
    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 돌봄, 이제는 함께합니다"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 온보딩 슬라이드 자리 -->
    <View
        android:id="@+id/onboardingPager"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/sloganText"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이메일 입력 -->
    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이메일 주소"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/onboardingPager"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputEmail"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- 로그인 상태 유지 체크박스 -->
    <CheckBox
        android:id="@+id/checkboxKeepLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 상태 유지"
        app:layout_constraintTop_toBottomOf="@id/inputPassword"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintStart_toStartOf="@id/inputPassword" />

    <!-- 이메일 로그인 버튼 -->
    <Button
        android:id="@+id/btnEmailLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="로그인"
        android:backgroundTint="#FF8AAE"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/checkboxKeepLoggedIn"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/inputPassword"
        app:layout_constraintEnd_toEndOf="@id/inputPassword" />

    <!-- 회원가입하기 텍스트 -->
    <TextView
        android:id="@+id/textSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입하기"
        android:textSize="14sp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnEmailLogin"
        app:layout_constraintEnd_toEndOf="@id/btnEmailLogin" />

    <!-- 소셜 로그인 영역 -->
    <LinearLayout
        android:id="@+id/socialLoginLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소셜 로그인" />

        <Button
            android:id="@+id/btnKakaoLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="카카오로 로그인"
            android:backgroundTint="#FEE500"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Google 로그인"
            android:backgroundTint="#FFFFFF"
            android:textColor="#444444"
            android:paddingStart="12dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <!-- 비밀번호 찾기 -->
    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊으셨나요?"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/socialLoginLayout"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintEnd_toEndOf="@id/socialLoginLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
