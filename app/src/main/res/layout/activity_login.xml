<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp">

        <!-- 앱 로고 -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/momlogotext"
            android:contentDescription="앱 로고" />

        <!-- 슬로건 -->
        <TextView
            android:id="@+id/sloganText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 돌봄을 함께합니다"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#696969"
            android:layout_marginTop="12dp" />



        <!-- 이메일 입력 -->
        <EditText
            android:id="@+id/authEmailEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일 주소"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="24dp" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/authPasswordEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"
            android:padding="12dp" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="로그인"
            android:backgroundTint="#FF8AAE"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- 회원가입 텍스트 -->
        <TextView
            android:id="@+id/goSignInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:layout_gravity="end" />

        <!-- 소셜 로그인 영역 -->
        <LinearLayout
            android:id="@+id/socialLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소셜 로그인" />

            <Button
                android:id="@+id/btnKakaoLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="카카오로 로그인"
                android:backgroundTint="#FEE500"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- (추가 예정) 이메일 회원가입 버튼 -->
        <Button
            android:id="@+id/signBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="회원가입"
            android:backgroundTint="#FFC0CB"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/googleLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center_horizontal"
            android:text="Google 로그인"
            android:textColor="#444444" />
    </LinearLayout>
</ScrollView>
