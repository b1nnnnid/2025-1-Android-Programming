<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sitterScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/sitterSearchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:attr/windowBackground">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이돌봄시설 찾기"
        android:textStyle="bold"
        android:textColor="#FF8AAE"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"/>

    <!-- 검색 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">


        <!-- 기관명 검색 -->
        <EditText
            android:id="@+id/etSearchInstitution"
            android:layout_width="150dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:hint="지역/기관명 검색"
            android:textColor="@color/colorText"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginEnd="8dp" />

        <!-- 필터 버튼 -->
        <Button
            android:id="@+id/btnSearch_c"
            android:layout_width="30dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="검색"
            android:backgroundTint="#FF4081"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginVertical="12dp" />

    <TextView
        android:id="@+id/tvSearchHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지역을 입력하거나 기관명을 검색해보세요."
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp" />

    <!-- 저장한 시설 -->
    <TextView
        android:id="@+id/savedViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장한 시설"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />


    <TextView
        android:id="@+id/tvCloseFacilitiesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="아이돌봄시설 목록"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCloseFacilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />


    <!-- 돌보미 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSitterList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />
    </LinearLayout>
</ScrollView>