<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleParentFacilitySearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한부모가정지원시설 찾기"
        android:textStyle="bold"
        android:textColor="#FF8AAE"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"/>

    <!-- 검색 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <!-- 지역 검색 -->
        <EditText
            android:id="@+id/etSearchRegion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="지역 입력"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginEnd="8dp" />

        <!-- 시설명 검색 -->
        <EditText
            android:id="@+id/etSearchFacilityName"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:hint="시설명 검색"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginEnd="8dp" />

        <!-- 필터 버튼 -->
        <Button
            android:id="@+id/btnFilter"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="필터"
            android:backgroundTint="#FF4081"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginVertical="12dp" />

    <TextView
        android:id="@+id/tvSearchHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색어 입력 또는 필터를 통해 원하는 시설을 찾아보세요."
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp" />

    <!-- 최근 본 시설 -->
    <TextView
        android:id="@+id/tvRecentViewedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근 본 시설"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecentViewed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- 인기 시설 제목 -->
    <TextView
        android:id="@+id/tvCloseFacilitiesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 위치 근처 시설"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCloseFacilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- 시설 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFacilityList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />


</LinearLayout>
