<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="원하는 서비스를 빠르게 찾아보세요!"
            android:textColor="?android:attr/textColorSecondary"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <!-- 아이돌보미 찾기 버튼 -->
        <Button
            android:id="@+id/btnFindSitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF8AAE"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="아이돌봄시설/돌보미 찾기"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnFindFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FF8AAE"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="한부모가족 복지시설 보기"
            android:textAllCaps="false"/>

        <!-- 아이콘 + 텍스트 모음 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <!-- 대한사회복지회 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/btnKorea"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_business_center_24"
                    app:tint="#FF4081" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대한사회복지회"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 여성가족부 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/btnWomen"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/web"
                    app:tint="#FF4081" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성가족부"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 유튜브 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/btnYouTube"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_youtube_searched_for_24"
                    app:tint="#FF4081" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한부모 기준"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 복지로 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/btnBokjiro"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/person"
                    app:tint="#FF4081" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복지로"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 아이돌봄 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnIdolbom"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/child"
                    app:tint="#FF4081" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이돌봄"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 앱 로고 -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/momlogo"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
